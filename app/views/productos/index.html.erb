<p id="notice"><%= notice %></p>

<h1>Productos</h1>

<table class="highlight">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Caracteristica</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @productos.each do |producto| %>
      <tr>
        <td><%= producto.nombre %></td>
        <td><%= producto.caracteristica %></td>
        <td ><button class="waves-effect waves-light btn boton_ver"><%= link_to 'Show', producto,class:'boton ' %></button></td>
        <td><button class="waves-effect waves-light btn boton_editar" ><%= link_to 'Edit', edit_producto_path(producto),class:'boton' %></button></td>
        <td><button class="waves-effect waves-light btn boton_eliminar"><%= link_to 'Destroy', producto,class:'boton', method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="fixed-action-btn horizontal">
    <a href="productos/new"  class="btn-floating btn-large red">
      <i class="large material-icons">mode_edit</i>
    </a>
</div>
<%= link_to 'New Producto', new_producto_path %>
