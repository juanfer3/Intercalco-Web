<p id="notice"><%= notice %></p>

<h1>Mallas</h1>

<table class="highlight">
  <thead>
    <tr>
      <th>Num malla</th>
      <th>Caracteristica</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mallas.each do |malla| %>
      <tr>
        <td><%= malla.num_malla %></td>
        <td><%= malla.caracteristica %></td>
        <td><%= link_to 'Show', malla %></td>
        <td><%= link_to 'Edit', edit_malla_path(malla) %></td>
        <td><%= link_to 'Destroy', malla, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="fixed-action-btn horizontal">
    <a href="mallas/new"  class="btn-floating btn-large red">
      <i class="large material-icons">mode_edit</i>
    </a>
</div>

<br>

<%= link_to 'New Malla', new_malla_path %>
