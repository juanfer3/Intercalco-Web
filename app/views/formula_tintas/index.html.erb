<p id="notice"><%= notice %></p>

<h1>Formula Tintas</h1>

<table class="highlight">
  <thead>
    <tr>
      <th>Tinta</th>
      <th>Tinta base</th>
      <th>Descripcion</th>
      <th>Cantidad</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @formula_tintas.each do |formula_tinta| %>
      <tr>
        <td><%= formula_tinta.tinta.pantone %></td>
        <td><%= formula_tinta.tinta_base %></td>
        <td><%= formula_tinta.descripcion %></td>
        <td><%= formula_tinta.cantidad %></td>
        <td><button class="waves-effect waves-light btn boton_ver"><i class="large material-icons"></i><%= link_to 'Show', formula_tinta,class:'boton ' %></button></td>
        <td><button class="waves-effect waves-light btn boton_editar" ><%= link_to 'Edit', edit_formula_tinta_path(formula_tinta) ,class:'boton '%></button></td>
        <td><button class="waves-effect waves-light btn boton_eliminar"><%= link_to 'Destroy', formula_tinta, method: :delete, data: { confirm: 'Are you sure?' } ,class:'boton '%></button></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="fixed-action-btn horizontal">
    <a href="formula_tintas/new"  class="btn-floating btn-large red">
      <i class="large material-icons">mode_edit</i>
    </a>
</div>
        
<br>

