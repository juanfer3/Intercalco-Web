<%= simple_form_for(@formula_tinta) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= 
       f.association :tinta,
       collection: Tinta.all, 
       label_method: :pantone, 
       value_method: :id, 
       as: :select, 
       include_blank: 'Seleccione Tinta'
    %>
    <%=
       f.association :base_tinta,
       collection: BaseTinta.all, 
       label_method: :descripcion_base, 
       value_method: :id, 
       as: :select, 
       include_blank: 'Seleccione Base'
    %>
    <%= 
      f.input :cantidad 
    %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
